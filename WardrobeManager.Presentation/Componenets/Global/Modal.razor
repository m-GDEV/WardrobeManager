@inject IJSRuntime JsRuntime

@namespace WardrobeManager.Presentation.Components.Global

@* !! When using this component make sure you put onclick="id.showModal()" in a button or something !! *@

<dialog id="@Id" class="modal">
    <div class="modal-box max-w-[@MaxWidth] w-[90%] relative min-h-[20rem] flex flex-row justify-center items-center">
        @ChildContent

    </div>

    @* Creates backdrop behind modal so if user clicks outside the modal, it will close *@
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>

@code
{
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string MaxWidth { get; set; } = "70rem";

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}